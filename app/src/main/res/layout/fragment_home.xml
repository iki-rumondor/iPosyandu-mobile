<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_menu">

        <!-- Konten layout lainnya -->

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lokasi"
            android:layout_alignStart="@+id/textView4"
            android:layout_alignEnd="@+id/nama_pasien"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="-225dp"
            android:src="@drawable/gambar_menu" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Pilih Tindakan" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="70dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Hallo" />

        <TextView
            android:id="@+id/nama_pasien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="70dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Nama User" />

        <TextView
            android:id="@+id/lokasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="90dp"
            android:drawableLeft="@drawable/location"
            android:fontFamily="@font/poppins_semibold"
            android:text="Location" />

        <Button
            android:id="@+id/button6"
            android:layout_width="344dp"
            android:layout_height="118dp"
            android:layout_below="@+id/imageView2"
            android:layout_alignStart="@+id/imageView2"
            android:layout_alignEnd="@+id/imageView2"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="29dp"
            android:layout_marginEnd="0dp"
            android:backgroundTint="@color/pink_btn"
            android:drawableLeft="@drawable/icon2"
            android:fontFamily="@font/poppins_semibold"
            android:gravity=""
            android:text="Pendaftara0n Abesensi"
            android:textColor="@color/black"
            app:cornerRadius="25dp"
            app:iconTint="#ECECEC" />

        <Button
            android:id="@+id/button7"
            android:layout_width="329dp"
            android:layout_height="117dp"
            android:layout_alignStart="@+id/button6"
            android:layout_alignEnd="@+id/button6"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="495dp"
            android:layout_marginEnd="0dp"
            android:backgroundTint="@color/pink_btn"
            android:drawableLeft="@drawable/icon1"
            android:fontFamily="@font/poppins_semibold"
            android:gravity=""
            android:text="Pencatatan Hasil Pemeriksaan"
            android:textColor="@color/black"
            app:cornerRadius="25dp"
            app:iconTint="#ECECEC" />

        <Button
            android:id="@+id/button8"
            android:layout_width="329dp"
            android:layout_height="117dp"
            android:layout_alignStart="@+id/button7"
            android:layout_alignEnd="@+id/button7"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="620dp"
            android:layout_marginEnd="0dp"
            android:backgroundTint="@color/pink_btn"
            android:drawableLeft="@drawable/icon2"
            android:fontFamily="@font/poppins_semibold"
            android:gravity=""
            android:text="Pelayanan Kesehatan"
            android:textColor="@color/black"
            app:cornerRadius="25dp"
            app:iconTint="#ECECEC" />

        <TextView
            android:layout_width="365dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView4"
            android:layout_alignEnd="@+id/nama_pasien"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="-231dp"
            android:fontFamily="@font/righteous"
            android:text="i-Posyandu"
            android:textColor="#FF92A4"
            android:textSize="25dp" />

    </RelativeLayout>

</FrameLayout>

